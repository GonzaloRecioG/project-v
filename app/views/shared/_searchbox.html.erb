<%= form_tag(search_index_path,  method: :get, class: 'form-inline') do |f| %>
  <div class="form-group">
    <%= text_field_tag :city, '', class: 'form-control', id:'user_input_autocomplete_location_by_city', placeholder: 'Choose your city' %>
  </div>

  <div class="form-group">
    <%= select_tag :category, options_for_select(Experience::CATEGORIES.collect { |category| [category, category]}), include_blank: "Select a category", class: 'form-control' %>
  </div>

  <%= button_tag(type: "submit", class: "btn btn-default btn-default") do %>
    Search
    <i class="fa fa-search"></i>
  <% end %>
<% end %>








